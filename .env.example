# GeoCass Server Configuration

# Debug mode (enables auto-reload)
GEOCASS_DEBUG=true

# Server settings
GEOCASS_HOST=0.0.0.0
GEOCASS_PORT=8080

# Security (change in production!)
GEOCASS_SECRET_KEY=change-me-in-production

# Public URL (for generating links)
GEOCASS_PUBLIC_URL=http://localhost:8080

# Database (SQLite by default)
GEOCASS_DATABASE_URL=sqlite:///./data/geocass.db

# Limits
GEOCASS_MAX_HOMEPAGE_SIZE_KB=1024
GEOCASS_MAX_SYNC_PER_MINUTE=5
GEOCASS_MAX_SYNC_PER_DAY=100
