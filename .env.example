# GeoCass Server Configuration
# Copy to .env and configure

# Debug mode (disable in production!)
GEOCASS_DEBUG=false

# Server settings
# Note: Railway sets PORT automatically - don't set GEOCASS_PORT there
GEOCASS_HOST=0.0.0.0
GEOCASS_PORT=8080

# Security (CHANGE IN PRODUCTION!)
GEOCASS_SECRET_KEY=change-me-in-production-use-random-string

# Public URL (for generating links)
GEOCASS_PUBLIC_URL=https://geocass.hearthweave.org

# Data directory for SQLite database
# Local: ./data (relative to project root)
# Railway: /data (mount a persistent volume at /data)
GEOCASS_DATA_DIR=./data

# Limits
GEOCASS_MAX_HOMEPAGE_SIZE_KB=1024
GEOCASS_MAX_SYNC_PER_MINUTE=5
GEOCASS_MAX_SYNC_PER_DAY=100
